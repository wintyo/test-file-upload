{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/scripts/*"
      ],
    },
    "jsx": "preserve",
    "jsxFactory": "h"
  },
  "exclude": [
    "node_modules"
  ]
}
